@model EmployeeViewModel

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<h4>Are you sure you want to delete this employee?</h4>

<div class="card mt-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.name</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.email</dd>

            <dt class="col-sm-2">Phone</dt>
            <dd class="col-sm-10">@Model.phone</dd>

            <dt class="col-sm-2">Salary</dt>
            <dd class="col-sm-10">@Model.salary.ToString("C")</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.address</dd>

            <dt class="col-sm-2">Department</dt>
            <dd class="col-sm-10">@Model.departmentName</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
