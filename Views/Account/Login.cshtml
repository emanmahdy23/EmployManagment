@model EmployManagment.Models.LoginUserViewModel

<h2 class="text-center">Login</h2>

<div class="row justify-content-center">
    <div class="col-md-6">

        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="alert alert-danger">@error.ErrorMessage</div>
        }

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control form-control-sm" />
            </div>

            <div class="form-group">
                <label asp-for="password"></label>
                <input asp-for="password" class="form-control form-control-sm" />
            </div>

            <div class="form-group form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>
</div>

<p class="mt-3 text-center">
    Don’t have an account?
    <a asp-action="Register" class="text-primary">Register here</a>
</p>
